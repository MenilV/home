---
layout: base.njk
---

<article class="article">
  <header class="article-header container container-narrow">
    <h1 class="article-title">{{ title }}</h1>
    <div class="article-meta">
      <time datetime="{{ date | isoDate }}">{{ date | readableDate }}</time>
      {%- if tags -%}
        <span>Â·</span>
        <span>
          {%- for tag in tags -%}
            {%- if tag != 'post' -%}
            <span class="tag" style="margin-left: var(--space-2);">{{ tag }}</span>
            {%- endif -%}
          {%- endfor -%}
        </span>
      {%- endif -%}
    </div>
  </header>
  
  <div class="article-content container container-narrow">
    {{ content | safe }}
  </div>
  
  <footer class="container container-narrow" style="margin-top: var(--space-16); padding-top: var(--space-8); border-top: 1px solid var(--border-subtle);">
    <p style="color: var(--text-tertiary); font-size: var(--text-sm);">
      Thanks for reading. Want to discuss this post? 
      <a href="https://twitter.com/MenilVukovic" target="_blank" rel="noopener">Find me on Twitter</a> or
      <a href="mailto:hello@menilvukovic.com">send me an email</a>.
    </p>
  </footer>
</article>
